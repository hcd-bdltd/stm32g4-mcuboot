{
        /*
        * Requires the Cortex-Debug extension
        * https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
        */
        "version": "0.2.0",
        "configurations": [
                {
                        /* Configuration for the STM32G431xx MCU */
                        "type": "cortex-debug",
                        "request": "launch",
                        "name": "Debug (OpenOCD)",
                        "servertype": "openocd",
                        "cwd": "${workspaceRoot}",
                        "runToEntryPoint": "main",
                        "executable": "${workspaceRoot}/build/stm32g4-mcuboot.elf",
                        "device": "STM32G431xx",
                        "configFiles": [
                                "interface/stlink-v2.cfg",
                                "target/stm32g4x.cfg"
                        ],
                }
        ]
}
